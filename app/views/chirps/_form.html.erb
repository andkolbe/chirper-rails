<%= form_with model: chirp  do |form| %>

    <div>
        <%= form.label :content %>
        <br>
        <%= form.text_field :content %>
        <% chirp.errors.full_messages_for(:content).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :location %>
        <br>
        <%= form.text_area :location %>
        <br>
        <% chirp.errors.full_messages_for(:location).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>