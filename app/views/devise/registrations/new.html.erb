<h2 class='text-center mb-4'>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'border p-4 shadow form-group bg-white'}) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='field'>
    <%= f.label :name, 'Username' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control bg-secondary input-shadow ml-2 mb-4' %>
  </div>

  <div class='field'>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control bg-secondary input-shadow ml-2 mb-4' %>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control bg-secondary input-shadow ml-2 mb-4' %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control bg-secondary input-shadow ml-2 mb-4' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Sign up', class: 'btn btn-primary btn-shadow align-items-end' %>
  </div>

  <div class='text-center mt-3'>
    <small class='mr-2'>Already Have An Account?</small>
    <%= render 'devise/shared/links' %>
  </div>
<% end %>

